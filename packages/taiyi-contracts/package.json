{
  "name": "@taiyi/contracts",
  "version": "0.1.0",
  "description": "Taiyi solidity contracts & artifacts",
  "author": "TaiSifu",
  "homepage": "https://taiyi.world",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "clean": "rimraf dist tsconfig.build.tsbuildinfo",
    "build": "yarn build:sol && yarn build:ts && yarn build:declarations",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:sol": "npx hardhat compile",
    "build:declarations": "shx cp typechain/*.d.ts dist/typechain",
    "hardhat": "npx hardhat",
    "task:accounts": "npx hardhat accounts",
    "task:advance-blocks": "npx hardhat advance-blocks",
    "task:deploy": "npx hardhat deploy",
    "task:deploy-demo": "npx hardhat deploy-demo",
    "task:populate-descriptor": "npx hardhat populate-descriptor",
    "task:run-local": "npx hardhat run-local",
    "task:grow-actor": "npx hardhat grow-actor",
    "task:new-actor": "npx hardhat new-actor",
    "task:pangu-daoli": "npx hardhat pangu-daoli",
    "task:run-log": "npx hardhat run-log",
    "task:advance-timestamp": "npx hardhat advance-timestamp",
    "test": "npx hardhat test",
    "coverage": "npx hardhat coverage",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@ethersproject/abstract-provider": "*",
    "@float-capital/solidity-coverage": "^0.7.17",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.1.0",
    "@openzeppelin/contracts-upgradeable": "^4.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@typechain/ethers-v5": "^6.0.1",
    "@types/chai": "^4.2.15",
    "@types/chai-as-promised": "^7.1.3",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "*",
    "@types/prompt": "^1.1.0",
    "base64-sol": "^1.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.3.0",
    "hardhat": "^2.1.1",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-change-network": "^0.0.7",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.5",
    "prettier-plugin-solidity": "^1.0.0-beta.12",
    "prompt": "^1.1.0",
    "shx": "^0.3.3",
    "solmate": "^6.6.1",
    "ts-node": "^10.0.0"
  },
  "dependencies": {
    "ethers": "^5.4.7"
  }
}
